<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="FashionWebAppProject" transaction-type="JTA">
	<jta-data-source>java:jboss/datasources/fashiON1</jta-data-source>
	<class>dl.Amigo</class>
	<class>dl.Comentario</class>
	<class>dl.Like</class>
	<class>dl.Notificacion</class>
	<class>dl.Publicacion</class>
	<class>dl.Usuario</class>
	<class>dl.Valoracion</class>
	<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>
